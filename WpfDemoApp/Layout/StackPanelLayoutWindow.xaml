<Window x:Class="WpfDemoApp.Layout.StackPanelLayoutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDemoApp.Layout"
        mc:Ignorable="d"
        Title="StackPanelLayoutWindow" Height="300" Width="300">
    <StackPanel>
        <Button Margin="10,10,10,12">One</Button>
        <Button>Two</Button>
        <Button Margin="10,10,10,12">Three</Button>
        <StackPanel Orientation="Horizontal" Margin="10,10,10,12">
            <Border BorderBrush="Red" BorderThickness="2" CornerRadius="5">
                <Button>First</Button>
            </Border>
            <Border BorderBrush="Red" BorderThickness="2" CornerRadius="5">
            <Button Margin="10,10,10,12">Second</Button>
            </Border>
            <Button>Third</Button>
            <Border BorderBrush="Red" BorderThickness="2" CornerRadius="35">
                <Button Margin="10,10,10,12">Four</Button>
            </Border>
        </StackPanel>
    </StackPanel>
</Window>
