<Window x:Class="WpfDemoApp.Layout.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDemoApp.Layout"
        mc:Ignorable="d"
        Title="Login" Height="200" Width="300" Background="{StaticResource RdBrushes}" >

    <Border BorderBrush="BlanchedAlmond" BorderThickness="2" CornerRadius="20">
        <Canvas Height="150" Canvas.Left="10" Canvas.Top="10" Width="272">
            <TextBlock ><Run Text="Login"/></TextBlock>
            <TextBox Canvas.Top="81" Width="272" Height="29" BorderBrush="Red" BorderThickness="2" />
            <TextBlock Canvas.Top="58"><Run Text="Password"/></TextBlock>
            <TextBox Width="272" Canvas.Top="23" Height="32" BorderBrush="Red" BorderThickness="2"/>
            <Button Template="{StaticResource EllipseButton}" Style="{StaticResource trgBtn}" Canvas.Top="118" Width="94" Content="Login" Canvas.Left="1"/>
        </Canvas>
    </Border>
</Window>
